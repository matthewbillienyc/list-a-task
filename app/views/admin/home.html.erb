<div class="row well">
  <div class="col-xs-12">
    <h1 class="center-header">Welcome, Supreme Leader!</h1>
  </div>
  <div class="col-xs-4">
    <table class="table table-striped table-hover">
      <legend>Users</legend>
      <thead>
        <th>Username</th>
        <th>Lists Created</th>
        <th>Tasks Created</th>
        <th>Items Starred</th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.username %></td>
            <td><%= user.lists_total %></td>
            <td><%= user.tasks_total %></td>
            <td><%= user.stars_total %></td>
            <td><%= link_to 'Log In', login_as_path(id: user.id), class: 'btn btn-primary btn-xs', method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-4">
    <table class="table table-striped table-hover">
      <legend>Total created</legend>
      <thead>
        <th>Lists</th>
        <th>Tasks</th>
        <th>Stars</th>
      </thead>
      <tbody>
        <tr>
          <td><%= User.total_lists_made %></td>
          <td><%= User.total_tasks_made %></td>
          <td><%= User.total_items_starred %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-xs-4">
    <table class="table table-striped table-hover">
      <legend>Active Items</legend>
      <thead>
        <th>Lists</th>
        <th>Tasks</th>
        <th>Starred Lists</th>
        <th>Starred Tasks</th>
      </thead>
      <tbody>
        <tr>
          <td><%= List.all.length %></td>
          <td><%= Task.all.length %></td>
          <td><%= Star.lists.length %></td>
          <td><%= Star.tasks.length %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
