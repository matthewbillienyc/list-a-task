<div class="col-lg-4 list" id="list-<%= list.id %>">
  <div class="list-group">
    <a href="#" class="list-group-item">
      <h4 class="list-group-item-heading"><%= list.name %></h4><%= button_to "X", list_path(list), method: :delete, class: "btn btn-primary btn-xs", form_class: "delete-list", remote: true %>
    </a>
    <ul class="list-group">
      <% list.tasks.each do |task| %>
      <%= render partial: "tasks/task", locals: {task: task} %>
      <% end %>
    </ul>
  </div>
</div>
