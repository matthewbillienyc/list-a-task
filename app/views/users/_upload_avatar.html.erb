<%= form_for @user, html: {class: 'form-horizontal', id: 'upload-avatar'}, method: :patch, authenticity_token: true do |f| %>
  <div class="form-group">
    <%= f.file_field :avatar, class: 'col-lg-offset-2', value: @user.username %>
  </div>
  <div class="form-group">
    <%= f.submit 'Upload Avatar', class: 'col-lg-offset-2 btn btn-primary' %>
  </div>
<% end %>
